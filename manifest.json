{
  "manifest_version": 3,
  "name": "Extension Scheduler",
  "version": "1.0",
  "description": "Schedule and toggle the behavior of selected extensions based on time and days.",
  "permissions": [
    "alarms",
    "management",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-on.png",
      "48": "images/icon-on.png",
      "128": "images/icon-on.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon-on.png",
    "48": "images/icon-on.png",
    "128": "images/icon-on.png"
  }
}
